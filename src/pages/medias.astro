---
// Page Médias
import Layout from '../layouts/Layout.astro';
---

<Layout title="Médias - Granit Mitoyen">
  <h1 class="text-3xl font-bold mb-6">Médias</h1>
  
  <!-- Vidéo YouTube -->
  <div class="mb-8">
    <div class="aspect-video max-w-4xl mx-auto">
      <iframe 
        class="w-full h-full rounded-lg shadow-lg"
        src="https://www.youtube.com/embed/yTAwnxUROY8?si=UkJRPpYVgxgJ5QHP" 
        title="YouTube video player" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        referrerpolicy="strict-origin-when-cross-origin" 
        allowfullscreen>
      </iframe>
    </div>
  </div>

  <!-- Galerie photos concert Montfort -->
  <h2 class="text-2xl font-semibold mb-4 mt-8">Concert Montfort</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <img 
        src="/concerts/montfort/Montfort 1.jpg" 
        alt="Concert Montfort - Photo 1" 
        class="w-full h-64 object-cover"
      />
      <div class="p-4">
        <h3 class="font-semibold">Montfort 1</h3>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <img 
        src="/concerts/montfort/Montfort 2.jpg" 
        alt="Concert Montfort - Photo 2" 
        class="w-full h-64 object-cover"
      />
      <div class="p-4">
        <h3 class="font-semibold">Montfort 2</h3>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <img 
        src="/concerts/montfort/Montfort 3.jpg" 
        alt="Concert Montfort - Photo 3" 
        class="w-full h-64 object-cover"
      />
      <div class="p-4">
        <h3 class="font-semibold">Montfort 3</h3>
      </div>
    </div>
  </div>
</Layout>

