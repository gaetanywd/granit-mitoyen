---
// Contact page (EN) : email + social links only. No form.
import Layout from '../../layouts/Layout.astro';
import { contactLinks, CONTACT_EMAIL } from '../../data/contact';
import { t, type Locale } from '../../i18n/dict';

const currentLocale = (Astro.currentLocale ?? 'en') as Locale;
const pageTitle = `${t(currentLocale, 'contact.title')} - ${t(currentLocale, 'layout.siteTitle')}`;
---

<Layout title={pageTitle}>
  <h1 class="text-3xl font-bold mb-6">
    {t(currentLocale, 'contact.title')}
  </h1>

  <p class="mb-4 max-w-xl">
    {t(currentLocale, 'contact.email')}
    {' â€” '}
    <a href={`mailto:${CONTACT_EMAIL}`} class="text-blue-600 hover:text-blue-800 hover:underline">
      {CONTACT_EMAIL}
    </a>
  </p>

  <ul class="space-y-3 max-w-xl">
    {contactLinks.map((link) => (
      <li>
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-blue-600 hover:text-blue-800 hover:underline"
        >
          {t(currentLocale, link.labelKey)}
        </a>
      </li>
    ))}
  </ul>
</Layout>
