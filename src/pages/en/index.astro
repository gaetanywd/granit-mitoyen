---
// Page d'accueil - version anglaise.
// La langue réelle utilisée vient d'Astro.currentLocale (config i18n).
// On réutilise le même système de traductions que pour la version FR.
import Layout from '../../layouts/Layout.astro';
import { t, type Locale } from '../../i18n/dict';

const currentLocale = (Astro.currentLocale ?? 'en') as Locale;
const pageTitle = `${t(currentLocale, 'home.title')} - ${t(currentLocale, 'layout.siteTitle')}`;
---

<Layout title={pageTitle}>
	<h1 class="text-3xl font-bold text-center mb-8">
		{t(currentLocale, 'home.title')}
	</h1>
	<div class="max-w-2xl mx-auto text-center space-y-4">
		<div class="text-xl text-gray-700">
			{t(currentLocale, 'home.subtitle.line1')}
		</div>
		<div class="text-xl text-gray-700">
			{t(currentLocale, 'home.subtitle.line2')}
		</div>
	</div>
	<div class="max-w-5xl mx-auto mt-5">
		<img src="/images/groupe JM.jpg" alt="Groupe JM" class="w-full h-auto">
	</div>
</Layout>

