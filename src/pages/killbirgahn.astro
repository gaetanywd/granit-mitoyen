---
// Page Killbirgahn (FR) : présentation du lore sans tout dévoiler.
import Layout from '../layouts/Layout.astro';
import { t, type Locale } from '../i18n/dict';

const currentLocale = (Astro.currentLocale ?? 'fr') as Locale;
const pageTitle = `${t(currentLocale, 'killbirgahn.title')} - ${t(
  currentLocale,
  'layout.siteTitle',
)}`;
---

<Layout title={pageTitle}>
  <h1 class="text-3xl font-bold mb-6">
    {t(currentLocale, 'killbirgahn.title')}
  </h1>

  <!-- Intro : monde et album -->
  <section class="mb-10 max-w-3xl space-y-6">
    <p class="text-gray-700 leading-relaxed">
      {t(currentLocale, 'killbirgahn.intro')}
    </p>

    <img
      src="/images/Granit Mitoyen - Lands Of Killbirgahn cover.jpg"
      alt={t(currentLocale, 'killbirgahn.coverAlt')}
      class="w-full max-w-2xl rounded-lg shadow-md"
    />
  </section>

  <!-- Teasers personnages / artefact -->
  <section class="space-y-8 max-w-3xl">
    <div>
      <h2 class="text-2xl font-semibold mb-2">Asel</h2>
      <p class="text-gray-700 leading-relaxed">
        {t(currentLocale, 'killbirgahn.tease.asel')}
      </p>
    </div>

    <div>
      <h2 class="text-2xl font-semibold mb-2">Samaël</h2>
      <p class="text-gray-700 leading-relaxed">
        {t(currentLocale, 'killbirgahn.tease.samael')}
      </p>
    </div>

    <div>
      <h2 class="text-2xl font-semibold mb-2">Scroll of Fire Rain</h2>
      <p class="text-gray-700 leading-relaxed">
        {t(currentLocale, 'killbirgahn.tease.scroll')}
      </p>
    </div>
  </section>
</Layout>

